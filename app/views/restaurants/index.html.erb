
<div class="container">
  <div class="row">
    <div class="col">

      <h1>All the restaurants</h1>



      <div class="row justify-content-center">
        <% @restaurants.each do |restaurant| %>
        <div class="col-12 col-sm-6 col-md-6 col-lg-4">
          <div>

            <div class="see-menu text-decoration-none">
              <%= link_to "Select", restaurant_path(restaurant.id) %>
            </div>

            <div class= "photo-restaurant">

            </div>
                <p><%= restaurant.name %></p>
                <p>address: <%= restaurant.address %></p>
                <p>rating: <%= restaurant.raiting %></p>
          </div>

        </div>
        <% end %>
      </div>



    </div>
  </div>
</div>
